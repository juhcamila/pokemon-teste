<div class="login-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class="text-center">Criar uma nova conta</h2>
    <div class="form-group has-error">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: 'form-control'%>
    </div>

    <div class="form-group has-error">
      <%= f.input :password,
                  required: true,
                  label: 'Senha',
                  hint: ("No mÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password"}, class: 'form-control' %>
    </div>

    <div class="form-group has-error">
      <%= f.input :password_confirmation,
                  required: true,
                  label: 'Confirmar senha',
                  input_html: { autocomplete: "new-password" }, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Criar conta", class: "btn btn-primary btn-lg btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
